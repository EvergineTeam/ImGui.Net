<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
		<Description>Provides csharp bindings to ImGui library.</Description>
		<PackageProjectUrl>https://evergine.com/</PackageProjectUrl>
		<RepositoryUrl>https://github.com/EvergineTeam/ImGui.Net</RepositoryUrl>
		<PackageIcon>icon.png</PackageIcon>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Evergine.Mathematics" Version="2022.2.16.6" />
		<PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="6.0.0" />
	</ItemGroup>
		
	<ItemGroup>
		<Content Include="build\**" PackagePath="build" />
		<Content Include="runtimes\**" PackagePath="runtimes" />
		<Content Include="Evergine.Bindings.Imgui.dll.config" Pack="true" Visible="true" PackageCopyToOutput="true" />
		<Content Include="Evergine.Bindings.Imgui.Reference.targets" Pack="false" />
	</ItemGroup>
		
	<ItemGroup>
	  <None Include="..\icon.png">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>


</Project>
